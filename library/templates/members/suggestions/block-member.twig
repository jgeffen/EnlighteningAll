<div id="ajax-modal" class="modal" tabindex="-1" data-profile-id="{{ id }}">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-xmark"></i>
                </button>

                <div class="media">
                    <img class="align-self-center mr-3 img-thumbnail" src="{{ avatar }}" alt="{{ alt }}">

                    <div class="media-body">
                        <h5>{{ username }}</h5>
                        <p class="card-text">{{ message }}</p>
                        <p class="card-text">Would you like to block this member?</p>
                    </div>
                </div>
            </div>

            <div class="modal-footer text-center">
                <div class="mx-auto">
                    <button class="btn btn-danger" data-dismiss="modal">No</button>
                    <button class="btn btn-success" data-profile-action="block">Yes, Block Member</button>
                </div>
            </div>
        </div>
    </div>
</div>