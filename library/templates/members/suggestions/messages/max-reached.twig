<div id="ajax-modal" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-xmark"></i>
                </button>

                <div class="media">
                    <img class="align-self-center mr-3 img-thumbnail" src="{{ avatar }}" alt="{{ alt }}">

                    <div class="media-body">
                        <h5>{{ username }}</h5>
                        <p class="card-text">Looks like you reached the maximum allowed messages per day. Upgrade your account now for full access!</p>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <a class="btn btn-success btn-block" href="/members/subscription">My Subscription Benefits</a>
            </div>
        </div>
    </div>
</div>