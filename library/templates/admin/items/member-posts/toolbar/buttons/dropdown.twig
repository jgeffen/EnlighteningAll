<div class="dropdown">
    <button class="toolbar__btn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="far fa-bars"></i>
    </button>

    <div class="dropdown-menu dropdown-menu-right">
        <h6 class="dropdown-header">Actions</h6>

        <a class="dropdown-item" href="/user/edit/member-posts/{{ id }}">
            <i class="fa-light fa-pencil fa-fw"></i> Edit
        </a>

        <a class="dropdown-item" href="#" data-post-action="delete">
            <i class="fa-light fa-trash fa-fw"></i> Delete
        </a>

        <div class="dropdown-divider"></div>

        <h6 class="dropdown-header">Toggles</h6>

        <a class="dropdown-item" href="#" data-post-action="toggle" data-field="approved" data-status="{{ flags.approved }}">
            {% if not flags.approved %}
                <i class="fa-light fa-circle-check fa-fw"></i> Approve
            {% else %}
                <i class="fa-light fa-circle-x fa-fw"></i> Unapprove
            {% endif %}
        </a>
    </div>
</div>