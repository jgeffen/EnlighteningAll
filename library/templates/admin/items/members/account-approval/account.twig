<div class="modal fade" tabindex="-1" data-member-id="{{ member.id }}">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Account Approval: {{ member.username }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body card border-0 rounded-0 p-0">
                <img class="card-img-top" src="{{ member.avatar }}" alt="{{ member.alt }}">
                <div class="card-body pt-3 pb-0">
                    <h2 class="card-title text-center mb-3">
                        {{ member.name }}
                        {% if member.partner is not null %}
                            + {{ member.partner }}
                        {% endif %}
                    </h2>

                    {% if posts|length > 0 or avatar.image is not empty %}
                        <table class="table table-bordered table-hover overflow-auto mb-3">
                            <tbody>
                                {% if avatar.image %}
                                    <tr data-type="avatar" data-approved="{{ avatar.approved ? 1 : 0 }}" data-avatar-id="{{ avatar.id }}">
                                        <td class="align-middle">
                                            <a href="{{ avatar.image }}" data-fancybox="{{ random() }}">
                                                <img class="img-thumbnail" src="{{ avatar.thumb }}" alt="{{ avatar.alt }}" width="64" height="64">
                                            </a>
                                        </td>
                                        <td class="align-middle"><strong>Member's Avatar</strong></td>
                                        <td class="align-middle text-nowrap">{{ avatar.date }}</td>
                                        <td class="align-middle">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle text-nowrap" data-toggle="dropdown" aria-expanded="false">
                                                    Options
                                                </button>

                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <h6 class="dropdown-header">Actions</h6>

                                                    <a class="dropdown-item" href="#" data-account-approval-action="approve">
                                                        <i class="fa-light fa-check fa-fw"></i> Approve
                                                    </a>

                                                    <a class="dropdown-item" href="#" data-account-approval-action="reject">
                                                        <i class="fa-light fa-xmark fa-fw"></i> Reject
                                                    </a>

                                                    <div class="dropdown-divider"></div>

                                                    <a class="dropdown-item" href="{{ avatar.image }}" data-fancybox="{{ random() }}">
                                                        <i class="fa-light fa-magnifying-glass fa-fw"></i> Preview
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endif %}

                                {% for post in posts %}
                                    <tr data-type="post" data-approved="{{ post.approved ? 1 : 0 }}" data-post-id="{{ post.id }}">
                                        <td class="align-middle">
                                            {% if post.image %}
                                                <a href="{{ post.image }}" data-fancybox="{{ random() }}">
                                                    <img class="img-thumbnail {{ post.private ? 'border-warning' : 'border-info' }}" src="{{ post.thumb }}" alt="{{ post.alt }}" width="64" height="64">
                                                </a>
                                            {% else %}
                                                <img class="img-thumbnail {{ post.private ? 'border-warning' : 'border-info' }}" src="{{ post.thumb }}" alt="{{ post.alt }}" width="64" height="64">
                                            {% endif %}
                                        </td>
                                        <td class="align-middle">{{ post.title }}</td>
                                        <td class="align-middle text-nowrap">{{ post.date }}</td>
                                        <td class="align-middle">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle text-nowrap" data-toggle="dropdown" aria-expanded="false">
                                                    Options
                                                </button>

                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <h6 class="dropdown-header">Actions</h6>

                                                    <a class="dropdown-item" href="#" data-account-approval-action="approve">
                                                        <i class="fa-light fa-check fa-fw"></i> Approve
                                                    </a>

                                                    <a class="dropdown-item" href="#" data-account-approval-action="reject">
                                                        <i class="fa-light fa-xmark fa-fw"></i> Reject
                                                    </a>

                                                    <div class="dropdown-divider"></div>

                                                    <a class="dropdown-item" href="#" data-account-approval-action="preview">
                                                        <i class="fa-light fa-magnifying-glass fa-fw"></i> Preview
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>

            <div class="modal-footer border-top p-3" data-type="account">
                <div class="mx-auto">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">
                        <i class="fa-solid fa-user-xmark"></i>
                        Cancel
                    </button>

                    <button type="button" class="btn btn-success" data-account-approval-action="approve">
                        <i class="fa-solid fa-user-check"></i>
                        Approve
                    </button>

                    <button class="btn btn-info" data-account-approval-action="preview">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        View Profile
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>