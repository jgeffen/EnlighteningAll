<div class="background-none">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center h-100">
        <div class="col align-self-center">
            <div class="card border-0">
                <img class="card-img-top" src="{{ image }}">

                <div class="card-body">
                    <h5 class="card-title">{{ title }}</h5>
                    <p class="card-text">{{ content|striptags('<br>,<p>,<strong>,<em>,<u>')|raw }}</p>
                </div>

                <div class="card-footer text-muted">
                    <span class="float-left">{{ date }}</span>
                    <span class="float-right">{{ visibility }}</span>
                </div>
            </div>
        </div>
    </div>
</div>