<div class="btn-group" data-setting-id="{{ id }}">
    <button type="button" class="btn btn-secondary btn-sm dropdown-toggle text-nowrap" data-toggle="dropdown" aria-expanded="false">
        Options
    </button>

    <div class="dropdown-menu dropdown-menu-right">
        <h6 class="dropdown-header">Actions</h6>

        <a class="dropdown-item" href="/user/edit/member-settings/{{ id }}">
            <i class="fa-light fa-pencil fa-fw"></i> Edit
        </a>

        {% if type in ['BOOLEAN'] %}
            <div class="dropdown-divider"></div>

            <h6 class="dropdown-header">Toggles</h6>

            <a class="dropdown-item" href="#" data-action="toggle">
                {% if enabled %}
                    <i class="fa-light fa-circle-x fa-fw"></i> Disable
                {% else %}
                    <i class="fa-light fa-circle-check fa-fw"></i> Enable
                {% endif %}
            </a>
        {% endif %}
    </div>
</div>