<style>
	.table td .form-check {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100%;
		margin: 0;
		padding: 0;
	}
</style>
<div class="d-flex justify-content-center">
    <div class="form-check form-switch">
        <input
                type="checkbox"
                class="form-check-input toggle-paid-out"
                data-id="{{ id }}"
                {% if paid_out %}checked{% endif %}
                style="cursor:pointer; transform: scale(1.3);"
        >
    </div>
</div>